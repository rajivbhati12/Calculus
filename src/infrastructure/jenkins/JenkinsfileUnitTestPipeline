
/* Basic unit test jenkins file*/
node{
    stage('Pull git repository'){
        build job: 'UnitTestPullGit', parameters: [string(name: 'version', value: "$version")]
    }
    stage('Create docker image') {
        build job: 'UnitTestCreateDockerImage', parameters: [string(name: 'version', value: "$version")]
    }
    stage('Build Unit Test container'){
        build job: 'UnitTestBuildContainer', parameters: [string(name: 'version', value: "$version")]
    }

}